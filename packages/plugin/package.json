{
  "name": "vitepress-demo-plugin",
  "version": "1.2.2",
  "description": "A vitepress plugin to preview component and display code",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "pub": "pnpm build && pnpm publish",
    "pub:beta": "pnpm build && pnpm publish --tag beta"
  },
  "homepage": "https://vitepress-demo.fe-dev.cn/",
  "repository": {
    "type": "git",
    "url": "git@github.com:zh-lx/vitepress-demo-plugin.git"
  },
  "bugs": "https://github.com/zh-lx/vitepress-demo-plugin/issues",
  "keywords": [
    "vitepress",
    "plugin",
    "code",
    "demo",
    "block",
    "preview",
    "component",
    "display"
  ],
  "author": "zh-lx",
  "license": "MIT",
  "peerDependencies": {
    "vitepress": "*",
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@stackblitz/sdk": "^1.11.0",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^20.4.2",
    "@types/pretty": "^2.0.3",
    "@vitejs/plugin-vue": "^3.0.3",
    "codesandbox": "^2.2.3",
    "highlight.js": "^11.10.0",
    "pretty": "^2.0.0",
    "sass": "^1.54.8",
    "vite": "^3.0.9",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vue": "^3.2.38"
  }
}
